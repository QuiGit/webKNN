
@{
    ViewBag.Title = "Admin View Page";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}
@model DEMONEW.Models.PageItem
<div class="content-data">
    <h3>Chi tiết: @Html.DisplayFor(Model => Model.Title)</h3>
    <div class="viewPage">
        <table border="1" style="border-collapse: collapse; margin-left:20px">
            <tr>
                <th>ID_P</th>
                <td><p>@Html.DisplayFor(Model => Model.ID_P)</p></td>
            </tr>
            <tr>
                <th>ID_MN</th>
                <td><p>@Html.DisplayFor(Model => Model.ID_MN)</p></td>
            </tr>
            <tr>
                <th>Title</th>
                <td><p>@Html.DisplayFor(Model => Model.Title)</p></td>
            </tr>
            <tr>
                <th>Sumary</th>
                <td><p>@Html.DisplayFor(Model => Model.Sumary)</p></td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img style="width:50px;height:50px" src="~/Uploads/Images/@Html.DisplayFor(Model=>Model.Image)" /></td>
            </tr>

        </table>
        <br />
    </div>
    <div class="trove">@Html.ActionLink("Trở về", "PageList", new { @class = "link" })</div>
</div>

